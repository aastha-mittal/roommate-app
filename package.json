{
  "name": "roommate-app",
  "version": "1.0.0",
  "private": true,
  "description": "Tinder-style roommate matching for college students (CMU)",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --prefix backend",
    "dev:frontend": "npm run dev --prefix frontend",
    "build": "npm run build --prefix backend && npm run build --prefix frontend",
    "db:generate": "npm run db:generate --prefix backend",
    "db:migrate": "npm run db:migrate --prefix backend",
    "db:seed": "npm run db:seed --prefix backend",
    "db:studio": "npm run db:studio --prefix backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
